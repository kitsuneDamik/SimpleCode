@model IEnumerable<PatientCard.DataBase.Specialization>

@{
    ViewBag.Title = "SpecializationView";
}

<h2>SpecializationView</h2>

<p>
    @Html.ActionLink("Create New", "CreateSpecialization")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DoctorSpecialization)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DoctorSpecialization)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "DeleteSpecialization", new { id=item.Id })
        </td>
    </tr>
}

</table>
